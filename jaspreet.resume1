    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        /* --- 1. OXR STYLE RESET --- */
        * { margin: 0; padding: 0; box-sizing: border-box; color: #1a1a1a; }

        /* Hide scrollbars */
        html { scrollbar-width: none; -ms-overflow-style: none; }
        html::-webkit-scrollbar { width: 0; height: 0; display: none; }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: #f8f9fa;
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
        }

        /* --- 2. TOP BAR --- */
        .top-bar {
            position: fixed;
            top: 0; left: 0; right: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 30px;
            z-index: 1000;
            font-size: 13px;
            font-weight: 600;
            letter-spacing: 0.5px;
            background: rgba(248, 249, 250, 0.95);
            backdrop-filter: blur(5px);
        }

        /* --- 3. CONTAINER --- */
        .container {
            width: 100%;
            padding: 20px;
            padding-top: 80px;
            display: flex;
            justify-content: center;
        }

        /* --- 4. RESUME CARD --- */
        .resume {
            width: 100%;
            max-width: 1100px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15), 0 8px 25px rgba(0, 0, 0, 0.1);
            padding: 50px;
            position: relative;
            overflow: hidden;
            animation: fadeIn 0.8s ease-in-out;
        }

        /* --- 5. BLUE BLUR --- */
        .blue-blur {
            position: absolute;
            width: 450px;
            height: 450px;
            background: radial-gradient(circle, rgba(0, 102, 255, 0.35) 0%, rgba(255, 255, 255, 0) 70%);
            top: 200px;
            left: -120px;
            filter: blur(80px);
            z-index: 0;
            pointer-events: none;
        }

        /* --- 6. 3-COLUMN LAYOUT --- */
        .grid-layout {
            display: grid;
            /* Left (180px) | Middle (Auto) | Right (150px) */
            grid-template-columns: 180px 1fr 150px;
            gap: 50px;
            position: relative;
            z-index: 2;
        }

        /* --- 7. TYPOGRAPHY --- */
        
        /* UPDATED: Bigger & Bolder Headers */
        .section-header {
            font-size: 12px;       /* Increased size */
            font-weight: 800;      /* Extra Bold */
            text-transform: uppercase;
            border-bottom: 2px solid #000; /* Thicker line */
            padding-bottom: 8px;
            margin-bottom: 20px;
            margin-top: 30px;
            color: #000 !important; /* Pure Black */
            display: flex;
            justify-content: space-between;
            letter-spacing: 0.5px;
        }
        .first-header { margin-top: 0; }

        h1 {
            font-size: 38px;
            line-height: 1.1;
            margin: 0 0 5px 0;
            font-weight: 700;
            letter-spacing: -1.5px;
            color: #000;
        }

        .role-title {
            font-size: 16px;
            font-weight: 600;
            color: #444;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        /* CONTACTS (Now under name) */
        .contact-row {
            margin-bottom: 12px;
            display: flex;
            flex-wrap: wrap;
            gap: 100px;
            font-size: 11px;
            font-weight: 500;
            color: #333;
        }
        .contact-row a {
            text-decoration: none;
            color: #111;
            font-weight: 600;
        }

        .black-line {
            width: 100%;
            height: 2px;
            background: #000;
            margin-bottom: 5px;
        }

        /* About Me Text */
        .about-me {
            font-size: 13px;
            line-height: 1.6;
            color: #333;
            margin-bottom: 40px;
            font-weight: 500;
            text-align: justify;
        }

        /* Experience */
        h3 { font-size: 16px; margin: 0 0 4px 0; font-weight: 700; }
        .date { font-size: 11px; font-weight: 600; color: #666; margin-bottom: 10px; display: block; text-transform: uppercase; }

        ul { padding-left: 16px; margin: 0 0 30px 0; }
        li { font-size: 13px; line-height: 1.6; margin-bottom: 6px; color: #222; }

        /* Sidebar Items */
        .list-item {
            border-bottom: 1px solid #f5f5f5;
            padding: 6px 0;
            font-size: 12px;
            font-weight: 600;
            color: #333;
        }
        
        .edu-item { margin-bottom: 20px; }
        .edu-degree { font-size: 12px; font-weight: 700; display: block; }
        .edu-school { font-size: 11px; color: #666; }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px); } 
            to { opacity: 1; transform: translateY(0); }
        }

        /* --- MOBILE --- */
        @media (max-width: 900px) {
            .container { padding: 10px; padding-top: 70px; }
            .resume { padding: 30px; width: 100%; }
            .grid-layout { display: flex; flex-direction: column; }
            .middle-col { order: -1; } 
            .blue-blur { width: 250px; height: 250px; }
            h1 { font-size: 32px; }
            .contact-row { flex-direction: column; gap: 5px; }
        }
    </style>
</head>
